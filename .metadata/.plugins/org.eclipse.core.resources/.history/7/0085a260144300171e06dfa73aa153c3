/**
 * Define a grammar called grammarDDS
 */
grammar IndicatorGrammar;

@header{
package antlr.java;
}

expression
   : term (operator term)*
   ;

term
   : variable
   | number
   | LPAREN expression RPAREN
   ;

number
   : MINUS? DIGIT + (POINT DIGIT +)?
   ;

variable
   : INDICATOR | VALUE
   ;
   
INDICATOR 
	: '$' LETTER (LETTER | DIGIT)*
   ;
   
VALUE
	: 'value'


LPAREN
   : '('
   ;

RPAREN
   : ')'
   ;

operator 
	: PLUS
	| MINUS
	| MULTI
	| DIV
	;  
	
PLUS
   : '+'
   ;


MINUS
   : '-'
   ;


MULTI
   : '*'
   ;


DIV
   : '/'
   ;


POINT
   : '.'
   ;


LETTER
   : [a-zA-Z]+
   ;


DIGIT
   :  [0-9]+
   ;


WS : [ \t\r\n]+ -> skip ; // skip spaces, tabs, newlines
