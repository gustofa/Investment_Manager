/**
 * Define a grammar called grammarDDS
 */
grammar IndicatorGrammar;

@header{
package antlr.java;
}

expression
   : term ((PLUS | MINUS) term)*
   ;

term
   : factor ((MULTI | DIV) factor)*
   ;

factor
   : variable
   | number
   | LPAREN expression RPAREN
   ;

number
   : MINUS? DIGIT + (POINT DIGIT +)?
   ;

variable
   : LETTER (LETTER | DIGIT)*
   ;


LPAREN
   : '('
   ;


RPAREN
   : ')'
   ;


OPERATOR 
	: PLUS
	| MINUS
	| MULTI
	| DIV
	;  
	
PLUS
   : '+'
   ;


MINUS
   : '-'
   ;


MULTI
   : '*'
   ;


DIV
   : '/'
   ;


POINT
   : '.'
   ;


LETTER
   : [a-zA-Z]+
   ;


DIGIT
   :  [0-9]+
   ;


WS : [ \t\r\n]+ -> skip ; // skip spaces, tabs, newlines
